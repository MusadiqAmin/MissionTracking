@model List<MissionTracking.Models.Progress>
@{
    ViewBag.Title = "ProgressList";
}

<br />
<div style="padding:10px 10px 10px 10px; background-color: lightgrey; border-radius:8px 9px;">

    <button type="button" class="btn btn-primary pull-right" data-toggle="modal" id="btnAdd">
        <span class="fa fa-plus-square" aria-hidden="true"></span> Add New Mission
    </button>

    <table class="table table-striped table table-hover table-bordered" id="prgtable" style="margin-top:0px">
        <thead>
            <tr style="background-color:#428bca">
                <th>
                    Reporting Date
                </th>
                <th>
                    Percentage
                </th>
                <th>
                    Status
                </th>
                <th>
                    Actions
                </th>

            </tr>
        </thead>

        <tbody>

            @foreach (var item in ViewData.Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReportingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Percentage)%
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td style="text-align:right">
                        <a id="btnUpdateEmp" class="btn btn-primary " onclick="GetAction(@item.ProgID)" data-toggle="tooltip" title="Edit" href="javascript:;"><i class="fa fa-edit"></i> </a>

                        <a class="btnDelete btn btn-danger" data-toggle="tooltip" title="Delete" data-id="@item.ProgID" href="javascript:;"><i class="fa fa-trash"></i></a>

                    </td>
                </tr>


            }
        </tbody>
    </table>
</div>

<style>
    .modal.custom {
        outline: none;
    }

        .modal.custom .modal-dialog {
            width: 40%;
            margin: 0 auto;
        }

    .modal-header {
        min-height: 16.428571429px;
        padding: 15px;
        border-bottom: 1px solid #e5e5e5;
        background-color: #428bca;
    }

    .modal-title {
        color: white;
    }

    .dataTables_filter{
        float: left !important;
    }
</style>



<div class="modal fade" id="ISModal" tabindex="-1" role="dialog" aria-labelledby="myModalLable" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="ModalTitle"></h4>
            </div>

            <div class="modal-body">
                <form class="form-horizontal" id="mConta">
                    <div class="form-group">
                        <div class="col-sm-9">
                            <span class="col-sm-3 control-label" id="txtID"></span>
                        </div>
                    </div>                                                     

                    
                    <div class="form-group">
                        <span class="col-sm-3 control-label" style="font-weight:bold">Reporting Date</span>
                        <div class="col-sm-9">
                            <input id="rDate" class="form-control" type="date" placeholder="Select Reporting Date" />
                        </div>
                    </div>

                    <div class="form-group">
                        <span class="col-sm-3 control-label" style="font-weight:bold">Status</span>
                        <div class="col-sm-9">
                            <select class="form-control" id="status">
                                <option value="" selected>Please Select the Status</option>
                                <option value="Pending">Pending</option>
                                <option value="Ongoing">Ongoing</option>
                                <option value="Cancelled">Cancelled</option>
                                <option value="Completed">Completed</option>
                            </select>
                        </div>
                    </div>


                    <div class="form-group">
                        <span class="col-sm-3 control-label" style="font-weight:bold">Percentage</span>
                        <div class="col-sm-9">
                            <input id="percentage" class="form-control" type="text" placeholder="Enter Percentage!">
                        </div>
                    </div>



                </form>
            </div>


            <div class="modal-footer">

                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>


                <button type="button" class="btn btn-primary" id="btnSaves">
                    Save <i class="fas fa-save" aria-hidden="true"></i>
                </button>


                <button type="button" class="btn btn-primary" id="btnUpdate" hidden onclick="UpdateProgress()">
                    Update <i class="fas fa-save" aria-hidden="true"></i>
                </button>

            </div>



        </div>
    </div>



</div>




@section scripts{

    <script>

        $("#prgtable").DataTable({
            "bLengthChange": false
        });


        //CLEARING THE MODAL
        $("#btnAdd").click(function () {
            $("#ISModal").modal('show');
            $('#percentage').val('');
            $('#rDate').val('');
            $('#status').val('');


            $('#ModalTitle').text('Add Progress');
            $('#btnUpdate').hide();
            $('#btnSaves').show();
        });

        //SAVING THE RECORD
        $('#btnSaves').click(function () {
            var table = $('#prgtable').DataTable();

            if ($('#percentage').val() == '' ||
                $('#rDate').val() == '' ||
                $('#status').val() == '') {

                toastr.error('All Fields are Required.');
            }
            else {
                var actionobj = {
                    ReportingDate: $('#rDate').val(),
                    Percentage: $('#percentage').val(),
                    Status: $('#status').val(),
                }
                console.log(actionobj);
                $.ajax({

                    url: '/ISM/PCreate',
                    dataType: 'json',
                    traditional: true,
                    type: 'POST',
                    contentType: 'application/json; charset=UTF-8',
                    data: JSON.stringify(actionobj),
                    success: function (response) {
                        if (response.status) {
                            toastr.success(response.message, "Saved Successfully");
                            //table.row.add([$('#sDate').val(), $('#eDate').val(),
                            //               $('#program option:selected').val(),
                            //               $('#type option:selected').val(),
                            //               $('#ratings option:selected').val()]).draw(false);
                            location.reload();

                        }
                    }
                });

                $('#ISModal').modal('hide');
            }

        }); 

        //DELETING THE RECORD 
        $('body').on('click', '.btnDelete', function () {

            var table = $('#prgtable').DataTable();
            var $this = $(this);
            var checkstr = confirm('Are you Sure you want to delete this record?');
            if (checkstr == true) {

                $.ajax({
                    url: '/ISM/PDelete',
                    data: { ID: $($this).attr("data-id") },
                    type: "POST",
                    success: function (response) {
                        toastr.error(response.message);
                        table.row($($this).parents('tr'))
                            .remove().draw();
                    }
                });
            }
            else {
                return false;
            }

        });

        //EDITING THE RECORD
        function GetAction(ID) {

            $.ajax({

                url: "/ISM/GetProgress",
                data: { ID: ID },
                type: 'GET',
                contentType: 'application/json;charset=UTF-8',
                dataType: 'JSON',
                success: function (result) {
                    $("#txtID").val(result.data.ProgID);
                    $('#percentage').val(result.data.Percentage);
                    $('#status').val(result.data.Status);
                    $('#rDate').val(result.data.ReportingDate);

                    $('#btnSaves').hide();
                    $('#btnUpdate').show();
                    $('#ModalTitle').text('Update Progress');
                    $('#ISModal').modal('show');

                }

            });

        }


        //UPDATING THE RECORD
        function UpdateProgress() {
            var table = $('#prgtable').DataTable();
            var model = {
                ProgID: $("#txtID").val(),
                ReportingDate: $('#rDate').val(),
                Percentage: $('#percentage').val(),
                Status: $('#status').val(),

            }
            $.ajax({

                url: '/ISM/UpdateProgress',
                type: 'POST',
                data: JSON.stringify(model),
                contentType: 'application/json; charset=UTF-8',
                success: function (response) {
                    toastr.success(response.message)
                    location.reload();
                    //table.row('selected').cell(':eq(0)').data($('#sDate').val()).draw();
                    //table.row('selected').cell(':eq(0)').data($('#eDate').val()).draw();
                    //table.row('selected').cell(':eq(0)').data($('#program').val()).draw();
                    //table.row('selected').cell(':eq(0)').data($('#type').val()).draw();
                    //table.row('selected').cell(':eq(0)').data($('#ratings').val()).draw();

                    $('#ISModal').modal('toggle');

                }

            });




        }











    </script>



}

